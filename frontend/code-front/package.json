{
  "name": "calculadora_mwd",
  "version": "0.1.0",
  "main": "dist/mwdCalculator/browser/src-electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href ./",
    "watch": "ng build --watch --configuration development",
    "tauri": "tauri",
    "tauri-dev": "tauri dev",
    "tauri-build-lin": "tauri build --bundles=deb,appimage",
    "tauri-build-win": "tauri build --runner cargo-xwin --target x86_64-pc-windows-msvc",
    "tauri-build-android": "tauri android build",
    "electron-dev": "npm run electron-build-ts && npm run electron-copy-req-files && electron . --dev",
    "electron-build-exe-lin": "npm run electron-build-commons && npm run electron-build-exe -- --platform=linux",
    "electron-build-exe-win": "npm run electron-build-commons && npm run electron-build-exe -- --platform=win32",
    "electron-build-commons": "npm run build && npm run electron-copy-req-files && npm run electron-build-ts",
    "electron-build-exe": "npx electron-packager ./dist/mwdCalculator/browser/ --arch=x64 --out=dist --publish=never --overwrite",
    "electron-build-ts": "tsc -p ./src-electron/tsconfig.json --outDir ./dist/mwdCalculator/browser/src-electron/",
    "electron-copy-req-files": "mkdir -p ./dist/mwdCalculator/browser/ && cp ./src-electron/package.json ./dist/mwdCalculator/browser/",
    "test": "ng test",
    "test-e2e": "npx cypress open"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^19.2.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.2.1",
    "@tauri-apps/plugin-fs": "^2.2.1",
    "@tauri-apps/plugin-opener": "^2",
    "export-to-csv": "^1.4.0",
    "ngx-papaparse": "^8.0.0",
    "rxjs": "~7.8.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@tauri-apps/cli": "^2",
    "@types/jasmine": "~5.1.0",
    "@types/papaparse": "^5.3.15",
    "copyfiles": "^2.4.1",
    "cypress": "^14.3.3",
    "cypress-real-events": "^1.14.0",
    "electron": "^36.2.1",
    "electron-packager": "^17.1.2",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "tslib": "^2.8.1",
    "typescript": "~5.7.2",
    "zone.js": "~0.15.0"
  }
}
